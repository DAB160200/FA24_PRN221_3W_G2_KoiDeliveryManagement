@page
@model KoiDeliveryManagement.RazorWebApp.Pages.Users.EditModel

@{
    ViewData["Title"] = "Edit User";
}

<h1 class="text-center text-primary my-4">@ViewData["Title"]</h1>

<div class="container">
    <h4 class="text-secondary mb-4">Edit User Details</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" class="shadow p-4 bg-light rounded">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="form-group mb-3">
                    <label asp-for="User.Username" class="form-label fw-bold">
                        Username <span class="text-danger">*</span>
                    </label>
                    <input asp-for="User.Username" class="form-control" />
                    <span asp-validation-for="User.Username" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="User.FullName" class="form-label fw-bold">
                        Full Name <span class="text-danger">*</span>
                    </label>
                    <input asp-for="User.FullName" class="form-control" />
                    <span asp-validation-for="User.FullName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="User.Email" class="form-label fw-bold">
                        Email <span class="text-danger">*</span>
                    </label>
                    <input asp-for="User.Email" class="form-control" />
                    <span asp-validation-for="User.Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="User.PhoneNumber" class="form-label fw-bold">Phone Number</label>
                    <input asp-for="User.PhoneNumber" class="form-control" />
                    <span asp-validation-for="User.PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="User.PasswordHash" class="form-label fw-bold">
                        Password <span class="text-danger">*</span>
                    </label>
                    <input asp-for="User.PasswordHash" class="form-control" type="password" />
                    <span asp-validation-for="User.PasswordHash" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="User.Role" class="form-label fw-bold">Role</label>
                    <select asp-for="User.Role" asp-items="ViewBag.RoleOptions" class="form-select"></select>
                    <span asp-validation-for="User.Role" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="User.Dob" class="form-label fw-bold">Birth Date</label>
                    <input asp-for="User.Dob" class="form-control" type="date" />
                    <span asp-validation-for="User.Dob" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="User.Gender" class="form-label fw-bold">Gender</label>
                    <div class="form-check">
                        <input asp-for="User.Gender" class="form-check-input" type="checkbox" id="genderCheck" />
                        <label for="genderCheck" class="form-check-label">Male</label>
                    </div>
                    <span asp-validation-for="User.Gender" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="User.Address" class="form-label fw-bold">Address</label>
                    <textarea asp-for="User.Address" class="form-control"></textarea>
                    <span asp-validation-for="User.Address" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="User.Status" class="form-label fw-bold">Status</label>
                    <select asp-for="User.Status" asp-items="ViewBag.AccountStatusOptions" class="form-select"></select>
                    <span asp-validation-for="User.Status" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="User.Id" />

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-save"></i> Save
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-page="./Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
